# remove:
#  Pl forms of some words
# Pl Nom is not removed

define sgwords [{kumbki} | {keegi} | {miski} | {eikeegi} | {eimiski}] ;

define PL [ "+Pl" ] ;
define NOM [ "+Nom" ] ;
define POS ["+Pron" | "+A" | "+N"] ;

# make sure only word-final components are considered
define WB [ "#" ] ;
define sglexical [ sgwords POS [\WB]* PL [\WB & \NOM]+ ] ;

regex ~[sglexical].i ;

